<div class="card mb-3">
  <h2 class="card-header h4">
    Unique Listing #<%= unique_listing.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Dish</dt>
      <dd>
        <% if @unique_listing.dish.present? %>
          <%= link_to unique_listing.dish, unique_listing.dish %>
        <% end %>
      </dd>

      <dt>Venue</dt>
      <dd>
        <% if @unique_listing.venue.present? %>
          <%= link_to unique_listing.venue, unique_listing.venue %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back unique_listing, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_unique_listing_url(unique_listing), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to unique_listing, method: :delete, data: { confirm: "Do you really want to delete this unique_listing?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(unique_listing.updated_at) %> ago
  </div>
</div>
